generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Studenty {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  name      String
  sobrenome String

  role Role @default(USER)

  login login?

  @@map("studentys")
}

model login {
  id Int @id @default(autoincrement())

  email    String
  password String

  studenty   Studenty @relation(fields: [studentyId], references: [id])
  studentyId Int      @unique

}

enum Role {
  USER
}
