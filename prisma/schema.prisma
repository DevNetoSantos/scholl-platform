generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Studenty {
  id                Int      @id @default(autoincrement())
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  name              String
  email             String   @unique
  password          String
  cpf               String   @unique
  date_birth        String
  phone             String
  city              String
  state             String
  series            String
  shift             String
  responsible_name  String
  responsible_email String   @unique
  responsible_phone String
  role              Role     @default(USER)

  @@map("studentys")
}

model Teacher {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String
  email          String
  cpf            String
  city           String
  state          String
  seacialization String
  role           Role     @default(ADMIN)

  @@map("teachers")
}

enum Role {
  USER
  ADMIN
}
