generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Studenty {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  name      String
  sobrenome String

  role Role @default(USER)

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  @@map("studentys")
}

model Teacher {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  name      String
  sobrenome String

  role Role @default(ADMIN)

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  @@map("teachers")
}

model User {
  id Int @id @default(autoincrement())

  email    String
  password String

  Studenty Studenty?
  Teacher  Teacher?

  @@map("users")
}

enum Role {
  USER
  ADMIN
}
